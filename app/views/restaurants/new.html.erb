<h1>Add a new restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], include_blank: "Select a category" %>
  <%= f.submit %>
<% end %>

<%= link_to "Home", restaurants_path %>
